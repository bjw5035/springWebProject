<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="web">

	<!-- 회원가입 -->
	<insert id="join" parameterType="com.myweb.board.vo.MemberVO">
		<![CDATA[
			INSERT INTO joinmember VALUES(#{userId}, #{userPw}, #{userName}, #{userAge})
		]]>
	</insert>

	<!-- 로그인 -->
<!--	<select id="login" parameterType="String" resultType="com.myweb.board.vo.LogInVO">-->
	<select id="login" parameterType="com.myweb.board.vo.LogInVO" resultType="String">
		<![CDATA[
			SELECT *
			FROM login
			WHERE id = #{id}
			  AND pw = #{pw}
		]]>
	</select>

	<!-- 게시물 리스트 -->
	<select id="board_list" resultType="hashmap">
		<![CDATA[
			INSERT INTO t_board
				(
				    title,
				    contents,
				    creator_id,
				    created_datetime
				)
				VALUES
				(
				    #{title},
				    #{contents},
				    #{creator_id},
				    #{created_datetime}
				)
		]]>
	</select>
	
	<!-- 마이페이지 수정 -->
	<update id="update_myModify">
		<![CDATA[
			UPDATE joinmember 
			set pw=#{userPw}
				,name=#{userName} 
			where id=#{userId}
		]]>
	</update>
	
	<!-- <delete id="delete_account"> <![CDATA[ delete from userinfo where id 
		= #{id} ]]> </delete> -->
</mapper>
